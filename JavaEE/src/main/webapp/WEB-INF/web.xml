<?xml version="1.0" encoding="UTF-8" ?>

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <!-- Добавляем сервлет FirstServlet -->
  <servlet>
    <servlet-name>FirstServlet</servlet-name> <!-- Название сервлета -->
    <servlet-class>org.siarhey.FirstServlet</servlet-class> <!-- Путь до сервлета -->
  </servlet>

  <!-- Конфигурация сервлетов FirstServlet -->
  <servlet-mapping>
    <servlet-name>FirstServlet</servlet-name> <!-- Сервлет -->
    <url-pattern>/hello-world</url-pattern> <!-- Ссылка браузера -->
  </servlet-mapping>

  <!-- Добавляем сервлет 2 HelloServlet -->
  <servlet>
    <servlet-name>HelloServlet</servlet-name> <!-- Название сервлета -->
    <servlet-class>org.siarhey.HelloServlet</servlet-class> <!-- Путь до сервлета -->
  </servlet>

  <!-- Конфигурация сервлета 2 HelloServlet -->
  <servlet-mapping>
    <servlet-name>HelloServlet</servlet-name> <!-- Сервлет -->
    <url-pattern>/hello</url-pattern> <!-- Ссылка браузера -->
  </servlet-mapping>

  <!-- Добавляем сервлет 3 RedirectServlet -->
  <servlet>
    <servlet-name>RedirectServlet</servlet-name> <!-- Название сервлета -->
    <servlet-class>org.siarhey.RedirectServlet</servlet-class> <!-- Путь до сервлета -->
  </servlet>

  <!-- Конфигурация сервлета 3 RedirectServlet -->
  <servlet-mapping>
    <servlet-name>RedirectServlet</servlet-name> <!-- Сервлет -->
    <url-pattern>/redirect</url-pattern> <!-- Ссылка браузера -->
  </servlet-mapping>

  <!-- Добавляем сервлет 4 RedirectServlet2 -->
  <servlet>
    <servlet-name>RedirectServlet2</servlet-name> <!-- Название сервлета -->
    <servlet-class>org.siarhey.RedirectServlet2</servlet-class> <!-- Путь до сервлета -->
  </servlet>

  <!-- Конфигурация сервлета 4 RedirectServlet2 -->
  <servlet-mapping>
    <servlet-name>RedirectServlet2</servlet-name> <!-- Сервлет -->
    <url-pattern>/redirect2</url-pattern> <!-- Ссылка браузера -->
  </servlet-mapping>

  <!-- Добавляем сервлет 5 ForwardServlet -->
  <servlet>
    <servlet-name>ForwardServlet</servlet-name> <!-- Название сервлета -->
    <servlet-class>org.siarhey.ForwardServlet</servlet-class> <!-- Путь до сервлета -->
  </servlet>

  <!-- Конфигурация сервлета 5 ForwardServlet -->
  <servlet-mapping>
    <servlet-name>ForwardServlet</servlet-name> <!-- Сервлет -->
    <url-pattern>/forward</url-pattern> <!-- Ссылка браузера -->
  </servlet-mapping>



  <!-- Конфигурация jsp 1 FirstJsp -->
  <servlet>
      <servlet-name>FirstJsp</servlet-name> <!-- jsp-file -->
      <jsp-file>/firstJsp.jsp</jsp-file> <!-- jsp-file -->
    </servlet>

  <!-- Конфигурация jsp 1 FirstJsp -->
  <servlet-mapping>
    <servlet-name>FirstJsp</servlet-name> <!-- jsp -->
    <url-pattern>/hello-world-jsp</url-pattern> <!-- Ссылка браузера -->
  </servlet-mapping>

  <!-- Конфигурация jsp 2 jsp4 -->
  <servlet>
    <servlet-name>jsp4</servlet-name> <!-- jsp-file -->
    <jsp-file>/jsp4.jsp</jsp-file> <!-- jsp-file -->
  </servlet>

  <!-- Конфигурация jsp 2 jsp4 -->
  <servlet-mapping>
    <servlet-name>jsp4</servlet-name> <!-- jsp -->
    <url-pattern>/helloJsp</url-pattern> <!-- Ссылка браузера -->
  </servlet-mapping>



</web-app>